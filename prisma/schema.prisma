generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Spec {
  id                String              @id @default(cuid())
  title             String
  templateType      String
  goal              String
  users             String
  constraints       String
  riskUnknowns      String?
  generatedMarkdown String
  createdAt         DateTime            @default(now())
  updatedAt         DateTime            @updatedAt
  userStories       UserStory[]
  tasks             Task[]
  generations       GenerationHistory[]
}

model UserStory {
  id                 String   @id @default(cuid())
  specId             String
  story              String
  acceptanceCriteria String
  priority           String
  order              Int
  spec               Spec     @relation(fields: [specId], references: [id], onDelete: Cascade)
}

model Task {
  id          String   @id @default(cuid())
  specId      String
  storyId     String?
  title       String
  description String
  group       String
  status      String
  estimate    String?
  priority    String
  order       Int
  spec        Spec     @relation(fields: [specId], references: [id], onDelete: Cascade)
}

model GenerationHistory {
  id           String   @id @default(cuid())
  specId       String
  model        String
  latencyMs    Int
  success      Boolean
  errorMessage String?
  createdAt    DateTime @default(now())
  spec         Spec     @relation(fields: [specId], references: [id], onDelete: Cascade)
}
